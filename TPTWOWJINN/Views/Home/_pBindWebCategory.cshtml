@model MDYOS.Models.PropertyClass
@{
    Layout = null;
}
@using System.Data;

@if (Model.dt != null && Model.dt.Rows.Count > 0)
{
    <div class="component__header" style="margin-left: 78px;">
        <h3 class="component__title">Top Categories</h3><a class="component__view" href="shop-categories.html">View all <i class="icon-chevron-right"></i></a>
    </div>
    <div class="component__content">
        <div class="owl-carousel" data-owl-auto="true" data-owl-loop="true" data-owl-speed="15000" data-owl-gap="0" data-owl-nav="true" data-owl-dots="true" data-owl-item="8" data-owl-item-xs="3" data-owl-item-sm="3" data-owl-item-md="5" data-owl-item-lg="8" data-owl-duration="1000" data-owl-mousedrag="on">
            @foreach (DataRow dr in Model.dt.Rows)
            {
                <div class="ps-category__item" catId="@dr["CategoryId"]"><a href="#"><img class="ps-categories__thumbnail" src="@dr["ImgPath"]" alt="@dr["CategoryName"]"></a><a class="ps-categories__name" href="#">@dr["CategoryName"] </a></div>
            }
        </div>
    </div>
}
