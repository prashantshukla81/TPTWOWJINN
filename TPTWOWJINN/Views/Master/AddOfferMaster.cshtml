
@{
    ViewBag.Title = "AddOfferMaster";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using System.Data;
@model MDYOS.Models.OfferProperty
<script>
    function AddNewOffer() {

        if ($('#txtoffername').val() == '') {
            alert('Please Enter Offer Name');
            $('#txtoffername').focus();
            return;
        }
        var image = $('#fuKycDoc').get(0).files;
        var data = new FormData;
        data.append('offername', $('#txtoffername').val());
        data.append('offerimage', image[0]);
        data.append('Action', '1')

        $("#showSpinner").show();
        $.ajax({
            url: "../Master/InsertaUpdateOfferMaster",
            method: "POST",
            contentType: false,
            processData: false,
            data: data,
            success: function (r) {
                $("#showSpinner").hide();
                alert('Offer Added Successfully !!!');
                $('#txtoffername').val('');
                $('#fuKycDoc').val('');
                window.location.reload(true);

            },
            error: function (r) {
                alert('Error');
            }
        })

    }

    function GetDetailsForEdit(ID) {
        var data = new FormData;
        data.append('Id', ID);
        debugger;
        $("#showSpinner").show();
        $.ajax({
            url: "../Master/GetOfferMasterForEdit",
            method: "POST",
            contentType: false,
            processData: false,
            data: data,
            success: function (r) {
                $('#txtoffername').val(r.offername)
                $('#hid').val(r.Id);
                $('#btnUpdate').show();
                $('#btnSave').hide();
                $("#showSpinner").hide();
            },
            error: function (r) {
                alert('Error');
            }
        })
    }



    function Update() {
        if ($('#txtoffername').val() == '') {
            alert('Please Enter Offer Name');
            $('#txtoffername').focus();
            return;
        }
        var image = $('#fuKycDoc').get(0).files;
        var data = new FormData;
        data.append('offername', $('#txtoffername').val());
        data.append('offerimage', image[0]);
        data.append("Id", $('#hid').val())
        data.append('Action', '4')

        $("#showSpinner").show();
        $.ajax({
            url: "../Master/InsertaUpdateOfferMaster",
            method: "POST",
            contentType: false,
            processData: false,
            data: data,
            success: function (r) {

                $("#showSpinner").hide();
                $('#btnUpdate').hide();
                $('#btnSave').show();
                alert('Offer Update Successfully !!!');
                $('#txtoffername').val('');
                $('#fuKycDoc').val('');
                window.location.reload(true);
            },
            error: function (r) {
                alert('Error');
            }
        })


    }
    function Delete(ID){
        var data = new FormData;
       // data.append("Id", $('#hid').val())
        data.append('Action', '5')
        data.append('Id', ID)
        $("#showSpinner").show();
        var mm= confirm('Are You Sure Want To delete This Record ?')
        if(mm==true)
        {
            $.ajax({
                url: "../Master/InsertaUpdateOfferMaster",
                method: "POST",
                contentType: false,
                processData: false,
                data: data,
                success: function (r) {


                    alert('Offer Delete Successfully !!!');
                    window.location.reload(true);
                },
                error: function (r) {
                    alert('Error');
                }
            })
        }


    }
</script>
