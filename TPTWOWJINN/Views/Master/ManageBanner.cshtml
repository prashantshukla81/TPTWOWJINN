    function AddNewBanner() {

        var image = $('#txtimage').get(0).files;
        var data = new FormData;
        data.append('SmallTitle', $('#txtsmalltitle').val());
        data.append('Title', $('#txttitle').val());
        data.append('BannerType', $('#txtbannertype').val());
        data.append('BannerImage', image[0]);
        debugger;
        $("#showSpinner").show();
        $.ajax({
            url: "../Master/InsertUpdateManageBannerMaster",
            method: "POST",
            contentType: false,
            processData: false,
            data: data,
            success: function (r) {
                $("#showSpinner").hide();
            },
            error: function (r) {
                alert('Error');
            }
        })


    }
</script>

